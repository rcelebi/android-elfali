<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/lineItem"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:orientation="horizontal" >

	<ImageView
	    android:id="@+id/icon"
	    android:layout_width="wrap_content"
	    android:layout_height="80dp"
	    android:layout_marginRight="6dip"
	    android:src="@drawable/icon" />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    <TextView android:id="@+id/textLine" android:layout_height="wrap_content"
		android:layout_marginLeft="10dip" android:textSize="20sp"
		android:layout_width="wrap_content"

		/>
	<TextView android:id="@+id/textLine2"
		android:layout_marginLeft="10dip" android:textSize="12sp"
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#bbbbbbbb"
		/>
	<TextView android:id="@+id/textLine3" android:layout_height="wrap_content"
		android:layout_marginLeft="10dip" android:textSize="10sp"
		android:layout_width="wrap_content"
		android:textStyle="bold"
		 />
	    
	</LinearLayout>
	
	


	</LinearLayout>

